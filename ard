#include <Adafruit_NeoPixel.h>
#define PIN 6 // номер порта к которому подключен модуль
#define count_led 64// количество светодиодов 
Adafruit_NeoPixel pixels = Adafruit_NeoPixel(count_led, PIN, NEO_GRB + NEO_KHZ800); //first number change does distance between colors

void setup() {
  Serial.begin(9600);
  pixels.begin();
}



void loop() {
  for (int i = 0; i < count_led; i++) {
    pixels.setPixelColor(i,pixels.Color(0, 0, 0));
  }
  pixels.show();
  delay(1000);
  int n = 8;
  int array[n][n];
  for(int i = 0; i < n; i++) {
    for(int j = 0; j < n; j++) {
      array[i][j] = (j + (i % 2)) % 2;
    }
  }
  for (int i = 0; i < n; i++) {
    for(int j = 0; j < n; j++) {
      if (array[i][j]) pixels.setPixelColor(n * i + j, pixels.Color(255, 0, 0));
    }  
  }
  pixels.show();
  delay(1000);
}
